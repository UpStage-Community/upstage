{
    "plugins": ["import"],
    "env": {
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [".ts", ".tsx", ".js", ".jsx", ".json"]
            }
        }
    },
    "rules": {
        "import/extensions": [
            1,
            "always",
            {
                "ts": "never",
                "tsx": "never",
                "js": "never",
                "jsx": "never",
                "json": "never"
            }
        ],
        "import/no-absolute-path": [
            1,
            {
                "commonjs": true
            }
        ],
        "import/no-unresolved": [
            1,
            {
                "commonjs": true
            }
        ]
    }
}
